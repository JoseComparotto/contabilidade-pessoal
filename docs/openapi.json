{
  "openapi": "3.0.3",
  "info": {
    "title": "Contabilidade Pessoal API",
    "version": "0.3.1",
    "description": "API para gerenciamento e consulta de contas contábeis."
  },
  "servers": [
    { "url": "/api", "description": "Servidor local" }
  ],
  "tags": [
    { "name": "Contas", "description": "Endpoints de consulta e manutenção de contas" },
    { "name": "Lançamentos", "description": "Endpoints de leitura de lançamentos" }
  ],
  "paths": {
    "/contas": {
      "get": {
        "tags": ["Contas"],
        "summary": "Listar contas",
        "operationId": "listarContas",
        "responses": {
          "200": {
            "description": "Lista de contas (HATEOAS)",
            "content": {
              "application/hal+json": {
                "schema": { "$ref": "#/components/schemas/CollectionModelContaViewDto" }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Contas"],
        "summary": "Criar nova conta",
        "operationId": "criarConta",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/ContaNewDto" }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Conta criada (HATEOAS)",
            "content": {
              "application/hal+json": {
                "schema": { "$ref": "#/components/schemas/EntityModelContaViewDto" }
              }
            }
          },
          "400": { "description": "Requisição inválida" }
        }
      }
    },
    "/contas/{id}": {
      "get": {
        "tags": ["Contas"],
        "summary": "Obter conta por ID",
        "operationId": "obterContaPorId",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer", "format": "int32" } }
        ],
        "responses": {
          "200": {
            "description": "Conta encontrada (HATEOAS)",
            "content": {
              "application/hal+json": {
                "schema": { "$ref": "#/components/schemas/EntityModelContaViewDto" }
              }
            }
          },
          "404": { "description": "Conta não encontrada" }
        }
      },
      "put": {
        "tags": ["Contas"],
        "summary": "Atualizar conta por ID",
        "operationId": "atualizarConta",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer", "format": "int32" } }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/ContaEditDto" }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Conta atualizada (HATEOAS)",
            "content": {
              "application/hal+json": {
                "schema": { "$ref": "#/components/schemas/EntityModelContaViewDto" }
              }
            }
          },
          "400": { "description": "Requisição inválida ou regra de negócio violada" },
          "404": { "description": "Conta não encontrada" }
        }
      },
      "delete": {
        "tags": ["Contas"],
        "summary": "Deletar conta por ID",
        "operationId": "deletarConta",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer", "format": "int32" } }
        ],
        "responses": {
          "204": { "description": "Conta removida (sem conteúdo)" },
          "400": { "description": "Regra de negócio violada" },
          "404": { "description": "Conta não encontrada" }
        }
      }
    },
    "/contas/{id}/superior": {
      "get": {
        "tags": ["Contas"],
        "summary": "Obter superior da conta",
        "operationId": "obterSuperiorPorConta",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer", "format": "int32" } }
        ],
        "responses": {
          "200": {
            "description": "Conta superior encontrada (HATEOAS)",
            "content": {
              "application/hal+json": {
                "schema": { "$ref": "#/components/schemas/EntityModelContaViewDto" }
              }
            }
          },
          "404": { "description": "Conta ou superior não encontrada" }
        }
      }
    },
    "/contas/{id}/inferiores": {
      "get": {
        "tags": ["Contas"],
        "summary": "Listar contas inferiores da conta",
        "operationId": "listarInferioresPorConta",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer", "format": "int32" } }
        ],
        "responses": {
          "200": {
            "description": "Contas inferiores encontradas (HATEOAS)",
            "content": {
              "application/hal+json": {
                "schema": { "$ref": "#/components/schemas/CollectionModelContaViewDto" }
              }
            }
          },
          "404": { "description": "Conta não encontrada ou sem inferiores" }
        }
      }
    },
    "/contas/{id}/lancamentos": {
      "get": {
        "tags": ["Contas"],
        "summary": "Listar lançamentos da conta",
        "operationId": "listarLancamentosPorConta",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer", "format": "int32" } }
        ],
        "responses": {
          "200": {
            "description": "Lançamentos encontrados (HATEOAS)",
            "content": {
              "application/hal+json": {
                "schema": { "$ref": "#/components/schemas/CollectionModelLancamentoPartidaDto" }
              }
            }
          },
          "404": { "description": "Conta não encontrada ou sem lançamentos" }
        }
      }
    },
    "/lancamentos": {
      "get": {
        "tags": ["Lançamentos"],
        "summary": "Listar lançamentos",
        "operationId": "listarLancamentos",
        "responses": {
          "200": {
            "description": "Lista de lançamentos (HATEOAS)",
            "content": {
              "application/hal+json": {
                "schema": { "$ref": "#/components/schemas/CollectionModelLancamentoDto" }
              }
            }
          }
        }
      }
    },
    "/lancamentos/{id}": {
      "get": {
        "tags": ["Lançamentos"],
        "summary": "Obter lançamento por ID",
        "operationId": "obterLancamentoPorId",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer", "format": "int64" } }
        ],
        "responses": {
          "200": {
            "description": "Lançamento encontrado (HATEOAS)",
            "content": {
              "application/hal+json": {
                "schema": { "$ref": "#/components/schemas/EntityModelLancamentoDto" }
              }
            }
          },
          "404": { "description": "Lançamento não encontrado" }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Link": {
        "type": "object",
        "properties": {
          "href": { "type": "string", "format": "uri" },
          "templated": { "type": "boolean" },
          "type": { "type": "string" },
          "title": { "type": "string" }
        },
        "required": ["href"]
      },
      "Links": {
        "type": "object",
        "additionalProperties": { "$ref": "#/components/schemas/Link" }
      },

      "TipoConta": {
        "type": "string",
        "description": "Tipo da conta",
        "enum": ["ANALITICA", "SINTETICA"]
      },
      "Natureza": {
        "type": "string",
        "description": "Natureza da conta",
        "enum": ["CREDORA", "DEVEDORA"]
      },
      "SentidoContabil": {
        "type": "string",
        "description": "Sentido em relação à conta de partida",
        "enum": ["DEBITO", "CREDITO"]
      },
      "SentidoNatural": {
        "type": "string",
        "description": "Sentido natural considerando a natureza da conta",
        "enum": ["ENTRADA", "SAIDA"]
      },

      "ContaNewDto": {
        "type": "object",
        "description": "DTO para criação de nova conta",
        "properties": {
          "superiorId": { "type": "integer", "format": "int32", "description": "ID da conta superior" },
          "descricao": { "type": "string" },
          "tipo": { "$ref": "#/components/schemas/TipoConta" },
          "redutora": { "type": "boolean", "description": "Indica se a conta é redutora" }
        },
        "required": ["superiorId", "descricao", "tipo"]
      },
      "ContaEditDto": {
        "type": "object",
        "description": "DTO para edição de conta",
        "properties": {
          "descricao": { "type": "string" },
          "tipo": { "$ref": "#/components/schemas/TipoConta" },
          "redutora": { "type": "boolean" }
        },
        "required": ["descricao", "tipo"]
      },
      "ContaViewDto": {
        "type": "object",
        "description": "Representação de uma conta",
        "properties": {
          "id": { "type": "integer", "format": "int32" },
          "codigo": { "type": "string", "description": "Código calculado a partir do caminho (ex.: 1.2.3)" },
          "descricao": { "type": "string" },
          "displayText": { "type": "string", "description": "Texto de exibição (ex.: código + descrição)" },
          "saldoAtual": { "type": "number", "format": "double" },
          "natureza": { "$ref": "#/components/schemas/Natureza" },
          "tipo": { "$ref": "#/components/schemas/TipoConta" },
          "redutora": { "type": "boolean" },
          "aceitaMovimentoOposto": { "type": "boolean" },
          "editable": { "type": "boolean" },
          "deletable": { "type": "boolean" },
          "editableProperties": { "type": "array", "items": { "type": "string" } },
          "superior": { "$ref": "#/components/schemas/ContaViewDto" },
          "inferiores": { "type": "array", "items": { "$ref": "#/components/schemas/ContaViewDto" } },
          "lancamentos": { "type": "array", "items": { "$ref": "#/components/schemas/LancamentoPartidaDto" } }
        }
      },

      "EntityModelContaViewDto": {
        "allOf": [
          { "$ref": "#/components/schemas/ContaViewDto" },
          {
            "type": "object",
            "properties": { "_links": { "$ref": "#/components/schemas/Links" } },
            "required": ["_links"]
          }
        ]
      },
      "CollectionModelContaViewDto": {
        "type": "object",
        "properties": {
          "_embedded": {
            "type": "object",
            "properties": {
              "contas": {
                "type": "array",
                "items": { "$ref": "#/components/schemas/EntityModelContaViewDto" }
              }
            }
          },
          "_links": { "$ref": "#/components/schemas/Links" }
        },
        "required": ["_links"]
      },

      "LancamentoDto": {
        "type": "object",
        "description": "Representação de um lançamento contábil",
        "properties": {
          "id": { "type": "integer", "format": "int64" },
          "descricao": { "type": "string" },
          "valor": { "type": "number", "format": "double" },
          "dataCompetencia": { "type": "string", "format": "date" },
          "contaDebito": { "$ref": "#/components/schemas/ContaViewDto" },
          "contaCredito": { "$ref": "#/components/schemas/ContaViewDto" }
        },
        "required": ["id", "descricao", "valor", "dataCompetencia", "contaDebito", "contaCredito"]
      },
      "EntityModelLancamentoDto": {
        "allOf": [
          { "$ref": "#/components/schemas/LancamentoDto" },
          {
            "type": "object",
            "properties": { "_links": { "$ref": "#/components/schemas/Links" } },
            "required": ["_links"]
          }
        ]
      },
      "CollectionModelLancamentoDto": {
        "type": "object",
        "properties": {
          "_embedded": {
            "type": "object",
            "properties": {
              "lancamentos": {
                "type": "array",
                "items": { "$ref": "#/components/schemas/EntityModelLancamentoDto" }
              }
            }
          },
          "_links": { "$ref": "#/components/schemas/Links" }
        },
        "required": ["_links"]
      },
      "LancamentoPartidaDto": {
        "type": "object",
        "description": "Lançamento na perspectiva da conta de partida (geram-se duas visões por lançamento)",
        "properties": {
          "id": { "type": "integer", "format": "int64" },
          "descricao": { "type": "string" },
          "dataCompetencia": { "type": "string", "format": "date" },
          "contaPartida": { "$ref": "#/components/schemas/ContaViewDto" },
          "contaContrapartida": { "$ref": "#/components/schemas/ContaViewDto" },
          "sentidoContabil": { "$ref": "#/components/schemas/SentidoContabil" },
          "sentidoNatural": { "$ref": "#/components/schemas/SentidoNatural" },
          "valorContabil": { "type": "number", "format": "double", "description": "Negativo quando DEBITO" },
          "valorNatural": { "type": "number", "format": "double", "description": "Negativo quando contra a natureza da conta de partida" }
        },
        "required": ["id", "descricao", "dataCompetencia", "contaPartida", "contaContrapartida", "sentidoContabil", "sentidoNatural", "valorContabil", "valorNatural"]
      },
      "CollectionModelLancamentoPartidaDto": {
        "type": "object",
        "properties": {
          "_embedded": {
            "type": "object",
            "properties": {
              "lancamentos": {
                "type": "array",
                "items": { "$ref": "#/components/schemas/LancamentoPartidaDto" }
              }
            }
          },
          "_links": { "$ref": "#/components/schemas/Links" }
        },
        "required": ["_links"]
      }
    }
  }
}
