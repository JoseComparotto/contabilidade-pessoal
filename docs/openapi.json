{
  "openapi": "3.0.3",
  "info": {
    "title": "Contabilidade Pessoal API",
    "version": "0.1.0",
    "description": "API para gerenciamento e consulta de contas contábeis."
  },
  "servers": [
    {
      "url": "/api",
      "description": "Servidor local"
    }
  ],
  "tags": [
    {
      "name": "Contas",
      "description": "Endpoints de consulta de contas"
    },
    {
      "name": "Lançamentos",
      "description": "Endpoints de leitura de lançamentos"
    }
  ],
  "paths": {
    "/lancamentos": {
      "get": {
        "tags": [
          "Lançamentos"
        ],
        "summary": "Listar lançamentos",
        "operationId": "listarLancamentos",
        "responses": {
          "200": {
            "description": "Lista de lançamentos",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/LancamentoDto"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/lancamentos/{id}": {
      "get": {
        "tags": [
          "Lançamentos"
        ],
        "summary": "Obter lançamento por ID",
        "operationId": "obterLancamentoPorId",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "description": "Identificador do lançamento",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int64"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Lançamento encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LancamentoDto"
                }
              }
            }
          },
          "404": {
            "description": "Lançamento não encontrado"
          }
        }
      }
    },
    "/contas": {
      "get": {
        "tags": [
          "Contas"
        ],
        "summary": "Listar contas",
        "operationId": "listarContas",
        "responses": {
          "200": {
            "description": "Lista de contas",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/ContaViewDto"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": [
          "Contas"
        ],
        "summary": "Criar nova conta",
        "operationId": "criarConta",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ContaNewDto"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Conta criada",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ContaViewDto"
                }
              }
            }
          }
        }
      }
    },
    "/contas/{id}": {
      "get": {
        "tags": [
          "Contas"
        ],
        "summary": "Obter conta por ID",
        "operationId": "obterContaPorId",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "description": "Identificador da conta",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Conta encontrada",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/ContaViewDto"
                  }
                }
              }
            }
          },
          "404": {
            "description": "Conta não encontrada"
          }
        }
      },
      "put": {
        "tags": [
          "Contas"
        ],
        "summary": "Atualizar conta por ID",
        "operationId": "atualizarConta",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "description": "Identificador da conta",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ContaEditDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Conta atualizada",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ContaViewDto"
                }
              }
            }
          },
          "404": {
            "description": "Conta não encontrada"
          },
          "400": {
            "description": "Requisição inválida (dados inválidos ou campo não editável)",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string"
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": [
          "Contas"
        ],
        "summary": "Deletar conta por ID",
        "operationId": "deletarConta",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "description": "Identificador da conta a ser removida",
            "required": true,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Conta removida com sucesso (sem conteúdo)"
          },
          "400": {
            "description": "Requisição inválida (conta não pode ser deletada)",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "404": {
            "description": "Conta não encontrada"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "SentidoOperacao": {
        "type": "string",
        "description": "Sentido da operação em relação à conta de partida",
        "enum": [
          "DEBITO",
          "CREDITO"
        ]
      },
      "LancamentoPartidaDto": {
        "type": "object",
        "description": "Representação de um lançamento a partir da perspectiva de uma conta de partida (gerando duas visões por lançamento)",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "descricao": {
            "type": "string"
          },
          "dataCompetencia": {
            "type": "string",
            "format": "date"
          },
          "contaPartida": {
            "$ref": "#/components/schemas/ContaViewDto"
          },
          "contaContrapartida": {
            "$ref": "#/components/schemas/ContaViewDto"
          },
          "sentido": {
            "$ref": "#/components/schemas/SentidoOperacao"
          },
          "valorMatematico": {
            "type": "number",
            "format": "double",
            "description": "Negativo quando sentido = DEBITO"
          }
        },
        "required": [
          "id",
          "descricao",
          "dataCompetencia",
          "contaPartida",
          "contaContrapartida",
          "sentido",
          "valorMatematico"
        ]
      },
      "LancamentoDto": {
        "type": "object",
        "description": "Representação de um lançamento contábil",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "descricao": {
            "type": "string"
          },
          "valor": {
            "type": "number",
            "format": "double"
          },
          "dataCompetencia": {
            "type": "string",
            "format": "date"
          },
          "contaDebito": {
            "$ref": "#/components/schemas/ContaViewDto"
          },
          "contaCredito": {
            "$ref": "#/components/schemas/ContaViewDto"
          }
        },
        "required": [
          "id",
          "descricao",
          "valor",
          "dataCompetencia",
          "contaDebito",
          "contaCredito"
        ]
      },
      "Natureza": {
        "type": "string",
        "description": "Natureza da conta",
        "enum": [
          "CREDORA",
          "DEVEDORA"
        ]
      },
      "TipoConta": {
        "type": "string",
        "description": "Tipo da conta",
        "enum": [
          "ANALITICA",
          "SINTETICA"
        ]
      },
      "ContaNewDto": {
        "type": "object",
        "description": "DTO para criação de nova conta",
        "properties": {
          "superiorId": {
            "type": "integer",
            "format": "int32",
            "nullable": false,
            "description": "ID da conta superior (obrigatório)"
          },
          "descricao": {
            "type": "string"
          },
          "tipo": {
            "$ref": "#/components/schemas/TipoConta"
          },
          "redutora": {
            "type": "boolean",
            "default": false
          }
        },
        "required": [
          "superiorId",
          "descricao",
          "tipo"
        ]
      },
      "ContaEditDto": {
        "type": "object",
        "description": "DTO para edição de conta",
        "properties": {
          "descricao": {
            "type": "string"
          },
          "tipo": {
            "$ref": "#/components/schemas/TipoConta"
          },
          "redutora": {
            "type": "boolean",
            "default": false
          }
        },
        "required": [
          "descricao",
          "tipo"
        ]
      },
      "ContaViewDto": {
        "type": "object",
        "description": "Representação plana de uma conta",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "codigo": {
            "type": "string",
            "description": "Código calculado a partir do caminho (ex. \"1.2.3\")"
          },
          "descricao": {
            "type": "string"
          },
          "displayText": {
            "type": "string",
            "description": "Texto de exibição combinado (ex.: código + descrição)"
          },
          "superiorId": {
            "type": "integer",
            "format": "int32",
            "nullable": true
          },
          "redutora": {
            "type": "boolean",
            "description": "Indica se a natureza da conta é oposta a de sua raiz."
          },
          "saldoAtual": {
            "type": "number",
            "format": "double",
            "description": "Saldo atual da conta (pode ser nulo se não calculado)",
            "nullable": true
          },
          "aceitaMovimentoOposto": {
            "type": "boolean",
            "description": "Indica se a conta aceita movimentos contrários à sua natureza."
          },
          "deletable": {
            "type": "boolean",
            "description": "Indica se a conta pode ser deletada"
          },
          "editable": {
            "type": "boolean",
            "description": "Indica se a conta pode ser editada"
          },
          "editableProperties": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Lista de propriedades que podem ser editadas"
          },
          "natureza": {
            "$ref": "#/components/schemas/Natureza"
          },
          "tipo": {
            "$ref": "#/components/schemas/TipoConta"
          },
          "superior": {
            "$ref": "#/components/schemas/ContaViewDto"
          },
          "inferiores": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/ContaViewDto"
            },
            "description": "Contas filhas"
          }
        },
        "required": [
          "id",
          "codigo",
          "descricao",
          "natureza",
          "tipo"
        ]
      }
    }
  }
}
